<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/peach">

    <LinearLayout
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/books"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/authorAddTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="BOOKS"
            android:fontFamily="@font/unbounded_extrabold"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:shadowColor="@color/black"
            android:shadowRadius="12"/>

        <LinearLayout
            android:id="@+id/linearLayoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-65dp"
            android:layout_marginLeft="265dp">

            <ImageButton
                android:id="@+id/buttonAdmin"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/ic_baseline_person_24" />

            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/ic_baseline_menu_24" />

            <ImageButton
                android:id="@+id/buttonLogout"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/ic_baseline_logout_24" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="-55dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pacifico_regular"
            android:text="the book club"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/textLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unbounded_semibold"
            android:text="Universitatea Nationala"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="-10dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="153dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textAllCaps="true"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="by"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/authorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="published by"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publisher"
            android:fontFamily="@font/unbounded_extrabold"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

    </LinearLayout>

